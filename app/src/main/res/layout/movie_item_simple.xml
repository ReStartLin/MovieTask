<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/id_cv_simple_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:theme="@style/CardView"
  >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/id_iv_movie_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/temp"
            android:layout_weight="4"/>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_tv_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:text="银河护卫队2"
            android:textSize="18sp"
            />

        <RatingBar
            android:id="@+id/id_rb_average"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_tv_movie_name"
            android:layout_alignStart="@+id/id_tv_movie_name"
            android:layout_below="@+id/id_tv_movie_name"
            android:isIndicator="true"
            android:rating="4.2" />

        <TextView
            android:id="@+id/id_tv_movie_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tv_movie_name"
            android:layout_toEndOf="@+id/id_rb_average"
            android:layout_toRightOf="@+id/id_rb_average"
            android:text="8.4"
            android:textSize="10sp" />

    </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>